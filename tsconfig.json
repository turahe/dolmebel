{
    "compilerOptions": {
        "target": "ES6",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "include": ["resources/js", "test/js"],
        "allowJs": true,
        "checkJs": false
    },
    "exclude": ["node_modules", "public"]
}
